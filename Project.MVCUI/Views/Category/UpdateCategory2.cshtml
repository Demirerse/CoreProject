@model CategoryVM
@{
    ViewData["Title"] = "UpdateCategory2";
    Layout = "~/Views/Shared/_SedLayout.cshtml";
}

<h1>UpdateCategory2</h1>
<form asp-action="UpdateCategory2" asp-controller="Category" method="post">
    <div>
        <input type="hidden" asp-for="Category.ID" />
    </div>
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Kategori ismi" />
    </div>
    <div>
        <input type="text" asp-for="Category.Description" placeholder="Açıklama" />
    </div>
    <div>
        <button class="btn btn-dark">Ekle</button>
    </div>
</form>
