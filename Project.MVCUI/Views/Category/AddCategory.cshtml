@model CategoryVM

@{
    ViewData["Title"] = "CategoryList";
}

<h1>Add Category</h1>


<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Kategori ismi" />
    </div>
    <div>
        <input type="text" asp-for="Category.Description" placeholder="Açıklama" />
    </div>
    <div>
        <button class="btn btn-dark">Ekle</button>
    </div>
</form>